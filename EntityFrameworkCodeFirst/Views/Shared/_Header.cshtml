@{
var isSignedIn = Context.Session.GetInt32("user-id").HasValue; // TODO: Bad :)
var isAdmin = Context.Session.GetString("role") == "Admin";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">EF Code First</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex">
                <ul class="navbar-nav flex-grow-1">
                    
                    @if (isSignedIn)
                    {
                        <li class="nav-item">
                            <a class="nav-link text-primary rounded border border-primary" asp-controller="SignedIn" asp-action="LeaveApplication">Create</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="SignedIn" asp-action="UserLeaveApplications">History</a>
                        </li>
                        if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="SignedIn" asp-action="AllLeaveApplications">All History</a>
                            </li>
                        }
                        <li class="nav-item ms-xl-auto">
                            <a class="nav-link text-dark" asp-controller="SignedIn" asp-action="SignOut">Sign Out</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item ms-xl-auto">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="SignIn">Sign In</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>